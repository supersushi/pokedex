{% extends 'base.html.twig' %}

{% block body %}
<h1>Devenez un Dresseur Pokemon</h1>
    {{ form_start(form) }}
    {{ form_row(form.username, {'label':'Nom de dresseur','attr' : {'placeholder' : 'Nom de dresseur ...'}}) }}
    {{ form_row(form.email, {'label':'Email','attr' : {'placeholder' : 'Adresse Email ...'}}) }}
    {{ form_row(form.password, {'label':'Mot de passe','attr' : {'placeholder' : 'Mot de passe ...'}}) }}
    {{ form_row(form.confirm_password, {'label':'Confirm Mot de passe','attr' : {'placeholder' : 'Confirmer le mot de passe ...'}}) }}
<div class="form-group">
    <label>Pokemon de d√©part : </label>
    <select name="starter_id" class="form-control">
        <option value="">Choisir un pokemon starter</option>
        {% for starter in starters %}
        <option value="{{ starter['id'] }}">{{ starter['nom'] }}</option>

        {% endfor %}
    </select>
</div>
    <button type="submit" class="btn btn-success">Inscription !</button>
    {{ form_end(form) }}
{% endblock %}
