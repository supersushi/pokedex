{% extends 'base.html.twig' %}

{% block title %}PokemonType index{% endblock %}

{% block body %}
    <h1>Commerce de Pokemons</h1>

    <div class="modal-header">
        <h5 class="modal-title">{% for info in infos %} {{ info['nb_pieces']}} pi√®ces{% endfor %}</h5>
    </div>
    {% for message in app.flashes('meme') %}
        <div class="alert alert-info">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('different') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('cher') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Xp</th>
            <th>Niveau</th>
            <th>Prix</th>
            <th>Date Dernier Entrainement</th>
            <th>Nom du dresseur</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for poke in pokemon %}
            <tr>
                <td>{{ poke['nom'] }}</td>
                <td>{{ poke['xp'] }}</td>
                <td>{{ poke['niveau'] }}</td>
                <td>{{ poke['prix'] }}</td>
                <td>{{ poke['date_dernier_entrainement'] }}</td>
                <td>{{ poke['username'] }}</td>
                <td>
                    <button type="button" class="btn btn-primary"><a href="{{ path('pokemon_type_buy', {'id' : poke['id'], 'trainer_username':poke['username']}) }}">buy</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
